@model List<WorkListDto>

@{
    ViewBag.Title = "title";
}


<!DOCTYPE html>
<html>
<head>
    <title>A Meaningful Page Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css">
</head>
<body>

<div class="container my-2">
  <div class="text-end my-2">
    <a asp-action="Create" class="btn btn-primary">Create new work</a>
  </div>
  <table class="table table-striped">
    <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Work</th>
      <th scope="col">Status</th>
      <th scope="col">Update</th>
      <th scope="col">Delete</th>
    </tr>
    </thead>
    <tbody>
     @foreach (var item in Model)
     {
       <tr>
         <td>@item.Id</td>
         <td>@item.Definition</td>
         <td>@(item.IsCompleted ? "Completed" : "Not Completed")</td>
         <td>
           <a asp-action="Update" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Update</a>
         </td>
          <td>
            <a asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
       </tr>
     }
    </tbody>
  </table>
</div>





<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"></script>
</body>
</html>